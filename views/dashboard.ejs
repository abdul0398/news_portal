    // CSV Export functionality
    function exportToCSV() {
        if (!Array.isArray(allArticles) || allArticles.length === 0) {
            alert('No articles available to export');
            return;
        }

        // Sort articles by date (newest to oldest) for export
        const sortedArticles = [...allArticles].sort((a, b) => {
            const dateA = a.date_created ? new Date(a.date_created) : new Date(0);
            const dateB = b.date_created ? new Date(b.date_created) : new Date(0);
            return dateB - dateA;
        });

        // CSV headers
        const headers = [
            'Title',
            'Description', 
            'Topic',
            'Date Created',
            'URL',
            'Assigned Clients'
        ];

        // Convert articles to CSV format
        const csvData = sortedArticles.map(article => {
            // Get assigned client names
            let assignedClientNames = [];
            if (Array.isArray(article.clients)) {
                assignedClientNames = article.clients.map(clientId => {
                    const client = allClients.find(c => c.id.toString() === clientId.toString());
                    return client ? client.name : `Client ID: ${clientId}`;
                });
            } else if (typeof article.clients === 'string') {
                try {
                    const clientIds = JSON.parse(article.clients);
                    assignedClientNames = clientIds.map(clientId => {
                        const client = allClients.find(c => c.id.toString() === clientId.toString());
                        return client ? client.name : `Client ID: ${clientId}`;
                    });
                } catch {
                    assignedClientNames = [];
                }
            }

            return [
                `"${(article.title || '').replace(/"/g, '""')}"`,
                `"${(article.description || '').replace(/"/g, '""')}"`,
                `"${(article.topic || '').replace(/"/g, '""')}"`,
                `"${article.date_created ? formatDate(article.date_created) : ''}"`,
                `"${(article.unique_url || '').replace(/"/g, '""')}"`,
                `"${assignedClientNames.join(', ').replace(/"/g, '""')}"`
            ].join(',');
        });

        // Combine headers and data
        const csvContent = [headers.join(','), ...csvData].join('\n');

        // Create and download the file
        const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
        const link = document.createElement('a');
        
        if (link.download !== undefined) {
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            
            // Generate filename with current date
            const now = new Date();
            const dateStr = now.toISOString().split('T')[0]; // YYYY-MM-DD format
            link.setAttribute('download', `news_report_${dateStr}.csv`);
            
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        } else {
            // Fallback for older browsers
            alert('CSV export is not supported in this browser. Please use a modern browser.');
        }
    }

