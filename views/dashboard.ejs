            });
            const data = await response.json();
            if (!response.ok) {
                alert(data.error || 'Error toggling topic status');
            } else {
                alert('Topic status updated successfully!');
                await fetchTopics();
                showTopicsView();
            }
        } catch (error) {
            console.error(error);
            alert('Network error. Please try again later.');
        }
    }

