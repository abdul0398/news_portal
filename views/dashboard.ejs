            const data = await response.json();
            if (!response.ok) {
                alert(data.error || 'Error deleting topic');
            } else {
                alert('Topic deleted successfully!');
                await fetchTopics();
                showTopicsView();
            }
        } catch (error) {
            console.error(error);
            alert('Network error. Please try again later.');
        }
    }

